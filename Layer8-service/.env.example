# API Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True

# JWT Authentication Settings
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here  # For Gemini

# LLM Settings
DEFAULT_LLM_PROVIDER=gemini  # Options: openai, anthropic, gemini
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# Anonymizer Settings
SPACY_MODEL=en_core_web_lg  # Requires installation: python -m spacy download en_core_web_lg
MAPPINGS_FILE=anonymizer_state.json
MAPPINGS_DIR=mappings

# CORS Settings (comma-separated lists)
# For production: CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=* 